/*
    Generic Elements and Reusable Classes
*/
Window {
    backgroundImage: 'jab11/content/images/bg.png'
}

WebView {
    backgroundColor: 'transparent'
}
.TornEdge {
    image: 'jab11/content/images/tornedge.png',
    width: 320,
    height: 6
}

/*
    Title Bar View
*/
.HomeButton {
    backgroundImage: 'jab11/content/images/bars/9dots.png',
    width: 41,
    height: 30
}
.TitleBar {
    backgroundImage: 'jab11/content/images/bars/top.png',
    top: 0, right: 0, left: 0, height: 44
}
.TitleBarTitle {
    color: '#fff',
    font: { fontWeight: 'bold', fontSize: 20 },
    textAlign: 'center',
    shadowColor: "#000",
	shadowOffset: {x:0, y:-1}
}

/*
    Details View
*/
.DetailsTornEdge {
    top: 63
}
.DetailsContainer {
    top: 0, right: 0, bottom: 0, left: 0
}
.DetailsTitleContainer {
    top: 0, right: 0, left: 0,
    height: 63,
    backgroundColor: '#fff',
    layout: 'vertical'
}
.DetailsTitle {
    top: 12,
    height: 'auto',
    font: { fontWeight: 'bold', fontSize: 19 },
    color: '#b94646',
    textAlign: 'center'
}
.DetailsSubtitle {
    top: 1,
    height: 'auto',
    font: { fontSize: 14 },
    color: '#4674b9',
    textAlign: 'center'
}
.DetailsBody {
    top: 63
}

/*
    Table
*/
.Table {
    backgroundColor: 'transparent'
}
.Row {
    backgroundColor: '#fff',
    selectedBackgroundColor: '#ddd',
    height: 60
}
.RowTitle {
    top: 14, right: 30, left: 10,
    height: 14,
    font: { fontWeight: 'bold', fontSize: 14 },
    color: '#4674b9'
}
.RowSubtitle {
    top: 32, right: 30, left: 10,
    height: 13,
    font: { fontSize: 13 },
    color: '#b94646'
}
.RowDetailsArrow {
    right: 10,
    width: 10, height: 14,
    image: 'jab11/content/images/arrowright.png'
}

/*
    Animations
*/
Animation {
    duration: 300,
    curve: Ti.UI.ANIMATION_CURVE_EASE_IN_OUT
}
.FadeIn {
    opacity: 1
}
.FadeOut {
    opacity: 0
}
.PopOut {
    top: 0, left: 0,
    transform: Ti.UI.create2DMatrix(),
    opacity: 1
}
.PopIn {
    top: 0, left: 0,
    transform: Ti.UI.create2DMatrix().scale(0.1, 0.1),
    opacity: 0
}